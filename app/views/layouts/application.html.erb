<!DOCTYPE html>
<html>
<head>
  <title>SunspotCouchDemo</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<%= form_tag search_path, :method => :get do%>
  <%= label_tag :q, "Search:" %>
  <%= text_field_tag :q, params[:q] %>
  <%= link_to("[x]", root_path) if params[:q] %>
<% end %>

<%= yield %>

</body>
</html>
